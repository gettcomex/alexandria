<div id="container">
	<h1>Listing books</h1>

	<table>
	  <tr>
	    <th>Title</th>
	    <th>Writer</th>
	    <th>Pages</th>
	    <th>Copies</th>
	    <th>Created by</th>
	    <th>Update by</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @books.each do |book| %>
	  <tr>
	    <td><%= book.title %></td>
	    <td><%= book.writer %></td>
	    <td><%= book.pages %></td>
	    <td><%= book.copies %></td>
	    <td><%= book.created_by %></td>
	    <td><%= book.update_by %></td>
	    <td><%= link_to 'Show', book %></td>
	    <td><%= link_to 'Edit', edit_book_path(book) %></td>
	    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>

	<br />
	<%= paginate @books%>
	<%= link_to 'New Book', new_book_path %>
</div>
<div id="container-form">
    <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

                <ul>
                <% @book.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        <% end %>
        <div class="field">
            <%= f.label :title, id:"label" %>
            <%= f.text_field :title, id:"field" %>
        </div>
        <div class="field">
            <%= f.label :writer, id:"label" %>
            <%= f.text_field :writer, id:"field" %>
        </div>
        <div class="field">
            <%= f.label :pages, id:"label" %>
            <%= f.number_field :pages, id:"field" %>
        </div>
        <div class="field">
            <%= f.label :copies, id:"label" %>

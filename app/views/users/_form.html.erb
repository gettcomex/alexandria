<div id="container-form">
	<%= form_for(@user) do |f| %>
  		<% if @user.errors.any? %>
    		<div id="error_explanation">
      			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      			<ul>
      				<% @user.errors.full_messages.each do |msg| %>
        				<li><%= msg %></li>
      				<% end %>
      			</ul>
    		</div>
  		<% end %>
		<div class="field">
		    <%= f.label :name %><br />
		    <%= f.text_field :name, :autofocus => true  %>
		</div>
		<div class="field">
		    <%= f.label :login %><br />
		    <%= f.text_field :login %>
  		</div>
  		<div class="field"><%= f.label :email %><br />
	  		<%= f.email_field :email %>
	  	</div>

	  	<div class="field"><%= f.label :password %><br />
	  		<%= f.password_field :password %>
	  	</div>

	  	<div class="field"><%= f.label :password_confirmation %><br />
	  		<%= f.password_field :password_confirmation %>
	  	</div>
	  	<% if current_user.is_employee? %>
			<div class="field">
		    	<%= f.label :is_employee %><br />
		    	<%= f.check_box :is_employee %>
  			</div>
  		<% end %>
  		<div class="actions" id="button">
    		<%= f.submit value="Salvar"%>
  		</div>
	<% end %>
</div>
<div id="container">
	<div id="menu-auxiliar">
		<%= link_to 'New Loan', new_loan_path, id: "menu-bar"%>
	</div>
	<table>
	  <tr id="tr_cabecalho">
	    <th>Book</th>
	    <th>User</th>
	    <th>Starts at</th>
	    <th>End at</th>
	    <th>Created by</th>
	    <th>Update by</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @loans.each do |loan| %>
	  <tr>
	    <td><%= loan.book_id %></td>
	    <td><%= loan.user_id %></td>
	    <td><%= loan.starts_at.strftime("%d/%m/%y") %></td>
	    <td><%= loan.end_at.strftime("%d/%m/%y") %></td>
	    <td><%= loan.created_by %></td>
	    <td><%= loan.update_by %></td>
	    <td><%= link_to 'Show', loan %></td>
	    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
	    <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>

	<br />
	<%= paginate @loans %>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>Alexandria</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
  </head>
    <body>   	
        <div id="user_nav">
            <% if user_signed_in? %>
                Signed in as <%= current_user.email %>. Not you?
                <%= link_to "Sign out", destroy_user_session_path, id:"devise"%>
            <% else %>
                <%= link_to "Sign up", new_user_registration_path, id:"devise" %> or <%= link_to "Sign in", new_user_session_path, id:"devise" %>
            <% end %>
        </div>
        <div id="nav-bar">    
            <div id="menu">
                <ul>
                    <% @menu.each do |item, value| -%>
                        <% if @current_menu_item == item -%>
                            <li id="current"><a href="<%= value[:link] %>"><%= value[:name] %></a></li>
                        <% else -%>
                            <li><a href="<%= value[:link] %>"><%= value[:name] %></a></li>
                        <% end -%>
                    <% end -%>
                    <li id="current"><%= link_to 'Meu UsuÃ¡rio', @user = current_user %></li>
                </ul>
            </div>
            <%= flash_messages %>
        </div>
     
        <%= yield %>
        <div id="bottom-bar">
    	      <button onclick="goBack()">Go Back</button>
        </div>
    </body>
</html>
